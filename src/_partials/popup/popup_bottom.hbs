{{!-- 
	popup-id : id 배정
--}}
<div class="popup_wrap bottom{{#if popup-class}} {{popup-class}}{{/if}}"{{#if popup-id}} id="{{popup-id}}"{{/if}}{{#if close-btn}}{{/if}}{{#if no-header}}{{/if}} role="dialog" aria-modal="true" {{#if hidden}}aria-hidden="false"{{else}}aria-hidden="true"{{/if}} >
	<div class="popup_container">
		<div class="popup_inner{{#if in-class}} {{in-class}}{{/if}}">
			{{!-- <div class="draggable" aria-grabbed="false" aria-dropeffect="close" tabindex="0" aria-label="드래그 하여 닫기"> --}}
			<div class="draggable" aria-hidden="true">
        <div class="move"></div>
      </div>
			{{#unless no-header}}
			<div class="popup_head">
				{{{popup-title}}}
			</div>
			{{/unless}}
			{{> @partial-block}}

			{{#unless close-btn}}
				<button type="button" class="popup_close" onclick="closePop('{{popup-id}}');"><span class="blind">팝업 닫기</span></button>
			{{/unless}}
		</div>
	</div>
</div>


