<div class="tooltip_wrap{{#if tw-class}} {{tw-class}}{{/if}}">
	<div class="tooltip_head{{#if t-class}} {{t-class}}{{/if}}">
	<button type="button" class="open trigger_btn" aria-expanded="false">{{#if trigger-icon}} {{> cp/icon iconClass=trigger-icon }}{{/if}}<span class="blind">툴팁 열기</span></button>
	</div>
	<div class="tooltip_panel" role="tooltip">
		<div class="inner">
			{{!-- <p class="inner_title" aria-describedby="title">{{title}}</p> --}}
			<div class="inner_contents">
			{{#if text}}
				{{{text}}}
			{{else}}
				{{> @partial-block }}
			{{/if}}
			</div>
			{{#if link}}<div class="inner_footer">{{#> cp/linkButton size="4" href=link}}<span>바로가기</span>{{/ cp/linkButton}}</div>{{/if}}
			<button type="button" class="close"><span class="blind">툴팁 닫기</span></button>
		</div>
	</div>
</div>