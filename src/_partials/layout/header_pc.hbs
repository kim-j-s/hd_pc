{{#unless no-header}}
<div id="header" class="header_pc{{#if h-prd}} header_pc_nd{{/if}}{{#if hd-error}} header_pc_error{{/if}}">
	<div class="header_pc_inner"> 
		{{#unless h-prd}}
		{{#unless hd-error}}
		<div class="hpi_top">
			<div class="hpi_change_area">
				<div class="hpi_cm">
					<a href="#" class="hpi_cm_btn{{#if corp_mode}}{{else}} active{{/if}}">개인</a>
					<a href="#" class="hpi_cm_btn{{#if corp_mode}} active{{/if}}">법인</a>
				</div>
			</div>
			<div class="hpi_utils">
				{{#if loga}}
				<span class="hpi_utils_items">
					<span class="remain_time">
						<span class="remain_time_clock">
							<lottie-player id="time_out_lottie" src="../../../json/time_logout.jso" background="transparent" speed="1" aria-hidden="true"></lottie-player>
						</span>
						<span class="sr_only">남은시간 :</span>
						<span class="remain_time_chk">17:00</span>
						<button type="button" class="time_out"><span class="text">시간연장</span></button>
					</span>
				</span>
				<span class="hpi_utils_items">
					<a href="#">로그아웃</a>
				</span>
				{{else}}
				<span class="hpi_utils_items">
					<a href="#">회원가입</a>
				</span>
				<span class="hpi_utils_items">
					<a href="#">로그인</a>
				</span>
				{{/if}}
				
				<span class="hpi_utils_items">
					<a href="https://www.hi.co.kr/serviceAction.do?menuId=100931" target="_blank" title="새창열림">상품공시</a>
				</span>
				<span class="hpi_utils_items">
					<a href="#">인증센터</a>
				</span>
				<span class="hpi_utils_items">
					<a href="https://www.hi.co.kr/" target="_blank" title="새창열림">현대해상 홈페이지</a>
				</span>
			</div>
		</div>
		{{/unless}}
		{{/unless}}
		<div class="hpi_bottom">
			<div class="hpi_l{{#if h-prd}} hpi_l_nd{{/if}}">
				{{#unless h-prd}}
				{{#if hd-error}}
				<h1 class="hpi_logo">
					<img src="../../../images/header/img_logo_ty1.png" alt="현대해상 다이렉트">
				</h1>
				{{else}}
				<h1 class="hpi_logo">
					<a href="#">
						<img src="../../../images/header/img_logo_ty1.png" alt="현대해상 다이렉트 홈으로">
					</a>
				</h1>
				{{/if}}
				{{else}}
				<h1 class="hpi_logo">
					<img src="../../../images/header/img_logo_ty2.png" alt="현대해상 다이렉트">
				</h1>
				<strong class="hpi_l_prd_name">{{h-prd}}</strong>
				{{/unless}}
			</div>


			{{#if petmode}}
			<div class="change_mode">
				<div class="item">
					<button type="button" class="cm_btn cm_btn_dog active"><span class="text">강아지<span class="sr_only">정보입력으로 전환</span></span></button>
				</div>
				<div class="item">
					<button type="button" class="cm_btn cm_btn_cat"><span class="text">고양이<span class="sr_only">정보입력으로 전환</span></span></button>
				</div>
			</div>
			{{/if}}
			{{#unless h-prd}}
			{{#unless hd-error}}
			<nav id="gnb" class="hpi_gnb">
				{{> layout/nav_pc}}
			</nav>
			{{/unless}}
			{{/unless}}
			{{#if gnbadd}}
			<nav id="gnb" class="hpi_gnb">
				{{> layout/nav_pc}}
			</nav>
			{{/if}}

			{{#unless hd-error}}
			<div class="hpi_sub_utils">
				{{#if h-prd}}
				<div class="item item_chatbot">
					<a href="#" class="hus_btn hsu_chatbot" target="_blank" title="새창열림"><span class="text">챗봇상담</span></a>
				</div>
				{{#if gnbadd}}
				<div class="item">
					<a href="#" class="hus_btn hsu_home"><span class="text">홈으로 이동</span></a>
				</div>
				{{else}}
				<div class="item">
					<button type="button" class="hus_btn hsu_close"><span class="text">종료</span></button>
				</div>
				{{/if}}
				{{else}}
				<div class="item">
					<button type="button" class="hus_btn hsu_alarm" onclick="openHDPopup(this,'pop_c_alarm');">
						<span class="text">알림 팝업 열기</span>
					</button>
					<div class="popup_wrap popup_wrap_type4" id="pop_c_alarm" role="dialog" aria-hidden="true">
						<div class="popup_container">
							<div class="popup_dim" aria-hidden="true" onclick="closeHDPopup('pop_c_alarm');"></div>
							<div class="popup_inner">
								<div class="popup_head">
									<div class="popup_head_title">알림</div>
								</div>
								<div class="popup_cont">
									<div class="popup_content">
										<div class="tag_item_wrap">
											<button type="button" class="tag_item size_m c_ty02 active"><span class="text">#전체</span></button>
											<button type="button" class="tag_item size_m c_ty02"><span class="text">#일상</span></button>
											<button type="button" class="tag_item size_m c_ty02"><span class="text">#계약</span></button>
											<button type="button" class="tag_item size_m c_ty02"><span class="text">#혜택</span></button>
											<button type="button" class="tag_item size_m c_ty02"><span class="text">#이벤트</span></button>
										</div>

										<div class="tag_item_cont">
											<div class="s_title">2025.01.06</div>
											<ul class="card_list_wrap_ty4">
												<li>
													<div class="card_item">
														<div class="item_inner">
															<div class="inner_cont">
																<div class="badge_wrap">
																	<span class="hd_badge outline solid_pastel c_primary size_m">이벤트</span>
																</div>
																<h3 class="item_title">운전자보험 7% 할인해드려요.</h3>
																<p class="item_desc">자동차보험 가입자 대상 운전자보험을 할인해드려요.</p>
															</div>
														</div>
														<div class="img_box">
															<img src="../../../images/content/bn/img_MBNEVNT10000000000.svg" alt="이벤트이미지" />
														</div>
													</div>
												</li>
											</ul>

											<div class="s_title">2025.01.05</div>
											<ul class="card_list_wrap_ty4">
												<li>
													<div class="card_item">
														<div class="item_inner">
															<div class="inner_cont">
																<div class="badge_wrap">
																	<span class="hd_badge outline solid_pastel c_secondary size_m">일상</span>
																</div>
																<h3 class="item_title">자동차보험 종료안내</h3>
																<p class="item_desc">
																	15가1321 자동차의 보험이 곧 종료되요.<br />
																	보험 갱신하고 앞으로도 현대해상과 함께해요 :)
																</p>
															</div>
														</div>
													</div>
												</li>
												<li>
													<div class="card_item" role="button" tabindex="0">
														<a href="#">
															<div class="item_inner">
																<div class="inner_cont">
																	<div class="badge_wrap">
																		<span class="hd_badge outline solid_pastel c_success size_m">혜택</span>
																	</div>
																	<h3 class="item_title">마일리지 환급금 이용 TIP</h3>
																	<p class="item_desc">
																		마일리지 환급예정금액이 있나요?<br />
																		자동차보험 환급예정금액으로 결제해보세요.
																	</p>
																</div>
															</div>
														</a>
													</div>
												</li>
											</ul>

											<div class="s_title">2025.01.03</div>
											<ul class="card_list_wrap_ty4">
												<li>
													<div class="card_item">
														<div class="item_inner">
															<div class="inner_cont">
																<div class="badge_wrap">
																	<span class="hd_badge outline solid_pastel c_warning size_m">계약</span>
																</div>
																<h3 class="item_title">가입안내</h3>
																<p class="item_desc">다이렉트 굿앤굿어린이보험 신규가입</p>
															</div>
														</div>
													</div>
												</li>
											</ul>

											<div class="btn_area center view_more">
												<button type="button" class="btn btn_more_view">
													<span class="text">
														더보기 <span class="counter"><strong class="btn_more_view_now">1</strong> / 2</span>
													</span>
												</button>
											</div>
										</div>
									</div>
								</div>
								<button type="button" class="popup_close" onclick="closeHDPopup('pop_c_alarm');"><span class="blind">팝업 닫기</span></button>
							</div>
						</div>
					</div>
					
				</div>
				<div class="item"> 
					<button type="button" class="hus_btn hsu_cart"><span class="text">장바구니 팝업 열기</span></button>
				</div>
				<div class="item">
					<button type="button" class="hus_btn hsu_search" aria-expanded="false"><span class="text">메뉴검색 팝업 열기</span></button>
					{{> layout/search_pc }}
				</div>
				<div class="item">
					<button type="button" id="all_menu_open" class="hus_btn hsu_menu_all" onclick="openHDPopup(this,'all_menu');"><span class="text">전체메뉴 보기</span></button>
					{{> layout/allmenu }}
				</div>				
				{{/if}}
			</div>
			{{/unless}}


		</div>

	</div>
</div>
{{#if bc}}
{{> cp/breadcrumb bc1="dept1" bc2="dept2" bc3="dept3" bc4="dept4"}}
{{/if}}
{{/unless}}